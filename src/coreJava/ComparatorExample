package javatpoint;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;

class ComparatorExampleDemo {

	 int age;
	 String name;

	ComparatorExampleDemo(int age , String name) {
		 this.age = age;
		 this.name = name;
	 }
}

class lastDigitClass implements Comparator<ComparatorExampleDemo>{

	@Override
	public int compare(ComparatorExampleDemo e1, ComparatorExampleDemo e2) {
		// TODO Auto-generated method stub
		  if(e1.age%10 > e2.age%10)
		  {
		  return 1;
		  }
		  else if(e1.age%10 < e2.age%10){
			  return -1;
		  }	
		  else {
			  return 0;
		  }
	}
	
}


public class ComparatorExample  {

	public static void main(String[] args) {
		
		List<ComparatorExampleDemo> list2 = new ArrayList<>();
		list2.add(new ComparatorExampleDemo(23,"ass"));
		list2.add(new ComparatorExampleDemo(10,"asdfghjk"));
		list2.add(new ComparatorExampleDemo(5678, "qwertyuio"));
		list2.add(new ComparatorExampleDemo(9, "fghjklghjk"));
		
		Collections.sort(list2, new lastDigitClass());
		
		for(ComparatorExampleDemo demo :list2) {
			System.out.println(demo.age +" "+ demo.name);
			
		}
		
	}
	
}
